<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="YTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color_black</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/color_black</item>
    </style>

    <style name="TextInputHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">2sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

</resources>
